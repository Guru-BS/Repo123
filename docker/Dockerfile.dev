FROM gcc:latest

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y \
    cmake \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy source code
COPY src/ /app/src/
COPY CMakeLists.txt /app/

# Build
RUN mkdir build && cd build && \
    cmake .. && \
    make

CMD ["./build/calculator"]